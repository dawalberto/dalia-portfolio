---
import Icon from "@/components/Icon.astro"
import { INK_PROJECT, InkNavSections } from "@/constants"
import Project from "@/layouts/Project.astro"

const SECTION_1 = INK_PROJECT.navItems.get(InkNavSections.SECTION_1)
const SECTION_2 = INK_PROJECT.navItems.get(InkNavSections.SECTION_2)
const SECTION_3 = INK_PROJECT.navItems.get(InkNavSections.SECTION_3)
const SECTION_4 = INK_PROJECT.navItems.get(InkNavSections.SECTION_4)
const SECTION_5 = INK_PROJECT.navItems.get(InkNavSections.SECTION_5)
---

<Project
  title={INK_PROJECT.title}
  rol={INK_PROJECT.rol}
  duration={INK_PROJECT.duration}
  typeOfProject={INK_PROJECT.typeOfProject}
  tools={INK_PROJECT.tools}
  navItems={INK_PROJECT.navItems}
>
  <div>
    <section id={InkNavSections.SECTION_1}>
      <h2>
        {SECTION_1?.icon && <Icon icon={SECTION_1.icon} />}
        <span>{SECTION_1?.title}</span>
      </h2>
    </section>
    <section id={InkNavSections.SECTION_2}>
      <h2>
        {SECTION_2?.icon && <Icon icon={SECTION_2.icon} />}
        <span>{SECTION_2?.title}</span>
      </h2>
    </section>
    <section id={InkNavSections.SECTION_3}>
      <h2>
        {SECTION_3?.icon && <Icon icon={SECTION_3.icon} />}
        <span>{SECTION_3?.title}</span>
      </h2>
    </section>
    <section id={InkNavSections.SECTION_4}>
      <h2>
        {SECTION_4?.icon && <Icon icon={SECTION_4.icon} />}
        <span>{SECTION_4?.title}</span>
      </h2>
    </section>
    <section id={InkNavSections.SECTION_5}>
      <h2>
        {SECTION_5?.icon && <Icon icon={SECTION_5.icon} />}
        <span>{SECTION_5?.title}</span>
      </h2>
    </section>
  </div>
</Project>
